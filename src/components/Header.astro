---
const navItems = [
    { linkText: 'Clients', href: '/client' },
    { linkText: 'Experts', href: '/expert' },
    { linkText: 'Contact', href: '/contact' },
    { linkText: 'Log in', href: '/login' }
];
---

<header class="w-full bg-banner-bg border-b-12 border-banner-border">
    <nav class="flex items-center justify-between px-6 py-3 max-w-5xl mx-auto sm:px-12">
        <a href="/" class="flex-shrink-0">
            <img src="/images/logo.svg" alt="K Insights Logo" width="234" height="98" class="h-24 w-auto sm:h-32" />
        </a>
        <ul class="flex gap-6">
            {navItems.map((item) => (
                <li>
                    <a 
                        href={item.href} 
                        class="font-bold text-lg hover:opacity-80 transition-opacity"
                        style="font-family: 'Gowun Batang', serif; color: #221d1e;"
                    >
                        {item.linkText}
                    </a>
                </li>
            ))}
        </ul>
    </nav>
</header>
