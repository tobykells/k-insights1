---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Log In - K Insights">
    <div class="max-w-md mx-auto">
        <h1 class="mb-8 text-center" style="font-family: 'Gowun Batang', serif; font-size: 3rem; font-weight: 700; color: #221d1e;">
            Log In
        </h1>

        <form class="space-y-6">
            <div>
                <label for="email" class="block mb-2 font-semibold" style="color: #221d1e; font-family: 'Gowun Batang', serif;">
                    Email
                </label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    class="w-full px-4 py-2 border-2 rounded-lg"
                    style="border-color: #221d1e;"
                    required
                />
            </div>

            <div>
                <label for="password" class="block mb-2 font-semibold" style="color: #221d1e; font-family: 'Gowun Batang', serif;">
                    Password
                </label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    class="w-full px-4 py-2 border-2 rounded-lg"
                    style="border-color: #221d1e;"
                    required
                />
            </div>

            <button 
                type="submit"
                class="w-full px-6 py-3 font-semibold rounded-lg transition-colors"
                style="background-color: #221d1e; color: white; font-family: 'Gowun Batang', serif;"
                onmouseover="this.style.backgroundColor='#a06372'"
                onmouseout="this.style.backgroundColor='#221d1e'"
            >
                Log In
            </button>

            <p class="text-center" style="color: #221d1e;">
                Don't have an account? <a href="/contact" class="font-semibold hover:opacity-80" style="color: #a06372;">Contact us</a>
            </p>
        </form>
    </div>
</Layout>
