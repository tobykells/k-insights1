---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact - K Insights">
    <div class="max-w-2xl">
        <h1 class="mb-8" style="font-family: 'Gowun Batang', serif; font-size: 3rem; font-weight: 700; color: #221d1e;">
            Contact Us
        </h1>
        
        <p class="mb-8 text-lg" style="color: #221d1e;">
            Get in touch with our team. We'll respond within 24 hours.
        </p>

        <form class="space-y-6">
            <div>
                <label for="name" class="block mb-2 font-semibold" style="color: #221d1e; font-family: 'Gowun Batang', serif;">
                    Name
                </label>
                <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    class="w-full px-4 py-2 border-2 rounded-lg"
                    style="border-color: #221d1e;"
                    required
                />
            </div>

            <div>
                <label for="email" class="block mb-2 font-semibold" style="color: #221d1e; font-family: 'Gowun Batang', serif;">
                    Email
                </label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    class="w-full px-4 py-2 border-2 rounded-lg"
                    style="border-color: #221d1e;"
                    required
                />
            </div>

            <div>
                <label for="message" class="block mb-2 font-semibold" style="color: #221d1e; font-family: 'Gowun Batang', serif;">
                    Message
                </label>
                <textarea 
                    id="message" 
                    name="message" 
                    rows="6"
                    class="w-full px-4 py-2 border-2 rounded-lg"
                    style="border-color: #221d1e;"
                    required
                ></textarea>
            </div>

            <button 
                type="submit"
                class="inline-flex items-center px-6 py-3 font-semibold rounded-lg transition-colors"
                style="background-color: #221d1e; color: white; font-family: 'Gowun Batang', serif;"
                onmouseover="this.style.backgroundColor='#a06372'"
                onmouseout="this.style.backgroundColor='#221d1e'"
            >
                Send Message
            </button>
        </form>
    </div>
</Layout>
